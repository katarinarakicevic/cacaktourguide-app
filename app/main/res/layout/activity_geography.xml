<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context="com.example.android.cacaktourguide.GeographyActivity"
    android:orientation="vertical">


            <ImageView
                android:id="@+id/main.backdrop"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                android:src="@drawable/grad"
                app:layout_collapseMode="parallax"
                android:alpha=".75"

                />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:id="@+id/scrollView">
        <RelativeLayout android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <com.ms.square.android.expandabletextview.ExpandableTextView
            android:id="@+id/expandable_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:maxCollapsedLines="8"
            app:animDuration="200"
            >
            <TextView
                android:id="@+id/expandable_text"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:textSize="20sp"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                >


            </TextView>
            <ImageButton
                android:id="@+id/expand_collapse"
                android:layout_gravity="right|bottom"
                android:background="@android:color/transparent"
                android:padding="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </com.ms.square.android.expandabletextview.ExpandableTextView>


<ImageView
    android:id="@+id/ovcar"
    android:layout_width="wrap_content"
    android:layout_height="300dp"
    android:src="@drawable/ovcar"
    android:layout_below="@id/expandable_text_view"/>
            <ImageView
                android:id="@+id/kablar"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/kablar"
                android:layout_below="@id/ovcar"/>
            <ImageView
                android:id="@+id/morava"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/morava"
                android:layout_below="@id/kablar"/>

            <ImageView
                android:id="@+id/morava1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/morava2"
                android:layout_below="@id/morava"/>
            <ImageView
                android:id="@+id/morava2"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/morava3"
                android:layout_below="@id/morava1"/>
            <ImageView
                android:id="@+id/morava3"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/morava4"
                android:layout_below="@id/morava2"/>
            <ImageView
                android:id="@+id/morava4"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/morava5"
                android:layout_below="@id/morava3"/>
            <ImageView
                android:id="@+id/jelica"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/jelica1"
                android:layout_below="@id/morava4"/>

            <ImageView
                android:id="@+id/jelica1"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:src="@drawable/jelica3"
                android:layout_below="@id/jelica"
                android:layout_marginBottom="20dp"/>




        </RelativeLayout>
    </ScrollView>







</LinearLayout>






