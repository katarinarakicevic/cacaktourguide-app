<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_height="match_parent"
    android:layout_width="match_parent"
    >


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >




        <TextView
            android:id="@+id/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/desc_content"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:background="#d1c4e9"
            />
        <View
            android:id="@+id/viewa"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/description_text"
            android:layout_marginTop="5dp"
            android:background="#311b92" />
        <TextView
            android:id="@+id/description_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content1"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_below="@+id/viewa"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:id="@+id/show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/description_text1"
            android:background="@drawable/arrowdown"
            android:clickable="true" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/description_text1"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/show"
            android:background="#311b92" />

        <ImageButton
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/description_text1"
            android:background="@drawable/arrowup"
            android:clickable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content2"
            android:layout_below="@+id/hide"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:background="#d1c4e9"/>



        <View
            android:id="@+id/id_view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/text_one"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/id_show"
            android:background="#311b92"

            />




        <TextView
            android:id="@+id/text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content3"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_alignTop="@+id/id_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:id="@+id/id_show1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrowdown"
            android:clickable="true"
            android:layout_below="@+id/text_two"
            />

        <View
            android:id="@+id/id_view1"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/text_two"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/id_show1"
            android:background="#311b92"

            />

        <ImageButton
            android:id="@+id/hide_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_two"
            android:background="@drawable/arrowup"
            android:clickable="true"
            android:visibility="invisible" />


        <TextView
            android:id="@+id/text_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content4"
            android:layout_below="@+id/hide_button1"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:background="#d1c4e9"
            />




        <View
            android:id="@+id/id_view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/text_three"
            android:layout_marginTop="5dp"
            android:background="#311b92"

            />


        <TextView
            android:id="@+id/text_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content5"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_alignTop="@+id/id_view2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:id="@+id/id_show3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrowdown"
            android:clickable="true"
            android:layout_below="@+id/text_four"
            />

        <View
            android:id="@+id/id_view3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/id_show3"
            android:layout_marginTop="5dp"
            android:background="#311b92"
            android:layout_toLeftOf="@+id/id_show3"

            />

        <ImageButton
            android:id="@+id/hide_button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_four"
            android:background="@drawable/arrowup"
            android:clickable="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/text_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content6"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#212121"
            android:background="#d1c4e9"
            android:layout_below="@+id/id_view3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />




        <View
            android:id="@+id/id_view4"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/text_five"
            android:layout_marginTop="5dp"
            android:background="#311b92"


            />



        <TextView
            android:id="@+id/text_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="5"
            android:text="@string/desc_content7"
            android:textStyle="italic"
            android:textSize="20sp"
            android:textColor="#212121"
            android:layout_below="@+id/id_view4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageButton
            android:id="@+id/id_show5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/arrowdown"
            android:clickable="true"
            android:layout_below="@+id/text_six"
            />

        <View
            android:id="@+id/id_view5"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/text_six"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/id_show5"
            android:background="#311b92"

            />

        <ImageButton
            android:id="@+id/hide_button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/text_six"
            android:background="@drawable/arrowup"
            android:clickable="true"
            android:visibility="invisible" />
    </RelativeLayout>




</ScrollView>
    </android.support.design.widget.CoordinatorLayout>