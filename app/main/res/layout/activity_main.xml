<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.cacaktourguide.MainActivity"
    >



<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    >
    <ImageView
        android:id="@+id/photo"
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:src="@drawable/cacak"
        android:scaleType="centerCrop"
        android:alpha=".35"

        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:id="@+id/photo1"
        android:src="@drawable/cacak2"
        android:layout_toRightOf="@+id/photo"
        android:layout_toEndOf="@+id/photo"
        android:layout_alignBottom="@+id/photo"
        android:scaleType="centerCrop"
        android:alpha=".35"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:id="@+id/photo2"
        android:src="@drawable/cacak3"
        android:layout_below="@+id/photo"
        android:scaleType="centerCrop"
        android:alpha=".35"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:id="@+id/photo3"
        android:src="@drawable/cacak4"
        android:layout_toRightOf="@+id/photo2"
        android:layout_toEndOf="@+id/photo2"
        android:layout_alignBottom="@+id/photo2"
        android:scaleType="centerCrop"
        android:alpha=".35"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:id="@+id/photo4"
        android:src="@drawable/cacak5"
        android:layout_below="@+id/photo2"
        android:scaleType="centerCrop"
        android:alpha=".35"
        />


    <ImageView
        android:layout_width="200dp"
        android:layout_height="179dp"
        android:id="@+id/photo5"
        android:src="@drawable/cacak6"
        android:layout_toRightOf="@+id/photo4"
        android:layout_toEndOf="@+id/photo4"
        android:layout_alignBottom="@+id/photo4"
        android:scaleType="centerCrop"
        android:alpha=".35"
        />
    <TextView
        android:id="@+id/welcome"
        style="@style/CategoryStyle"
        android:text="@string/category_welcome"
        android:onClick="openWelcomeList"
        android:alpha=".60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_above="@+id/photo4"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp" />

    </RelativeLayout>
    </GridLayout>

